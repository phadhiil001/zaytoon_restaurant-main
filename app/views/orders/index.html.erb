<% content_for :title, "Order" %>

<h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-6 text-center">Your Orders</h1>
<% if @orders.any? %>
  <div class="grid grid-cols-1 gap-4 sm:gap-6">
    <% @orders.each do |order| %>
      <div class="bg-white p-4 sm:p-6 border border-gray-200 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
        <h2 class="text-xl sm:text-2xl font-bold mb-2">Order #<%= order.id %></h2>
        <p class="text-sm sm:text-base text-gray-700 mb-2">Status: <%= order.status.capitalize %></p>
        <p class="text-sm sm:text-base text-gray-700 mb-4">Total Price: <%= number_to_currency(order.total_price) %></p>
        <%= link_to 'View Details', order_path(order), class: "bg-green-500 text-white text-sm sm:text-base px-3 sm:px-4 py-1 sm:py-2 rounded-lg hover:bg-green-700 transition-colors duration-200" %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center text-gray-700 mt-8">
    <p class="text-sm sm:text-base">You have no orders yet.</p>
  </div>
<% end %>
