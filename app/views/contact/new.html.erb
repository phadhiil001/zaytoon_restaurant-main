<% content_for :title, "Contact Us" %>

<div class="container mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-center mb-8 text-green-600">Contact Us</h1>
  <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
    <%= form_with model: @contact_message, url: contact_path, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
        <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= form.label :email, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
        <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= form.label :message, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
        <%= form.text_area :message, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="text-center">
        <%= form.submit "Send Message", class: "w-full bg-green-500 hover:bg-green-700 text-white text-sm sm:text-base font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
