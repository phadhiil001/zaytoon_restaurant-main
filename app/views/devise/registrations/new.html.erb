<% content_for :title, "Register" %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-2xl sm:text-3xl font-extrabold text-gray-900">Sign up</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div class="mb-4">
          <%= f.label :name, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :name, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :address, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :address, class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :province_id, "Province", class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.collection_select :province_id, Province.all, :id, :name, { prompt: "Select your province" }, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
        </div>

        <div class="mb-4">
          <%= f.label :email, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.email_field :email, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <% if @minimum_password_length %>
            <em class="text-xs sm:text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      </div>

      <div>
        <%= f.submit "Sign up", class: "mt-4 w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

    <div class="flex justify-between mt-4">
      <%= link_to "Log in", new_session_path(resource_name), class: "text-green-500 hover:text-green-700 font-semibold" %>
    </div>
  </div>
</div>
