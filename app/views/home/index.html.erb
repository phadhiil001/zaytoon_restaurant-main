<% content_for :title, "Zaytoon's Restaurant" %>

<div class="bg-green-100 py-10 sm:py-14 mb-12">
  <div class="max-w-7xl mx-auto text-center px-4 sm:px-6 lg:px-8">
    <h1 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold text-center my-6 sm:my-8">Welcome to Zaytoon Restaurant</h1>
    <h1 class="text-lg sm:text-xl md:text-2xl font-bold mb-2">What Would You Like To Order Today?</h1>
    <p class="text-sm sm:text-base md:text-lg mb-6 sm:mb-8">Our job is to fill your tummy with delicious food with fast and free delivery.</p>
    <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
      <%= link_to "Free Delivery", root_path, class: "bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 text-sm sm:text-base" %>
      <%= link_to "Dine In", root_path, class: "border-2 border-green-500 text-green-500 px-4 py-2 rounded-md hover:bg-green-500 hover:text-white text-sm sm:text-base" %>
    </div>
  </div>
</div>

<div class="py-6 bg-gray-100">
  <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-center mb-8">Categories</h1>

  <div class="container mx-auto px-2 sm:px-6 mb-8">
    <div class="flex flex-wrap justify-center gap-2">
      <% @categories.each do |category| %>
        <div class="relative bg-white rounded-lg shadow-md overflow-hidden group transform transition-transform duration-200 ease-in-out hover:scale-105">
          <%= link_to category_path(category), class: "block p-2 sm:p-3 text-center hover:bg-green-100 transition-colors duration-200" do %>
            <h3 class="text-xs sm:text-sm font-semibold text-gray-800 group-hover:text-green-600"><%= category.name %></h3>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Top Products Section -->
<h2 class="text-xl sm:text-2xl md:text-3xl font-semibold my-4 text-center">Top Products</h2>
<div class="container mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-20">
  <% @products.each do |product| %>
    <div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-transform duration-200 ease-in-out hover:scale-105">
      <%= link_to product_path(product), class: "group" do %>
        <% if product.images.attached? %>
          <%= image_tag url_for(product.images.first), class: "w-full h-36 sm:h-48 object-cover transition-transform duration-300 transform group-hover:scale-110" %>
        <% else %>
          <div class="w-full h-36 sm:h-48 bg-gray-200 mb-4"></div>
        <% end %>
        <div class="p-4 sm:p-6">
          <h3 class="text-base sm:text-lg md:text-xl font-semibold text-green-600 group-hover:text-green-800"><%= product.name %></h3>
          <p class="mt-2 text-sm sm:text-base text-gray-600"><%= product.description %></p>
          <p class="mt-2 font-bold text-base sm:text-lg"><%= number_to_currency(product.price) %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
