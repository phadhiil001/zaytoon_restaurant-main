<% content_for :title, "Profile" %>

<div class="bg-gray-100 min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-2xl sm:text-3xl font-extrabold text-gray-900">Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div class="mb-4">
          <%= f.label :name, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :name, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :address, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.text_area :address, class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :province_id, "Province", class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.collection_select :province_id, Province.all, :id, :name, { prompt: "Select your province" }, { class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
        </div>

        <div class="mb-4">
          <%= f.label :email, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm sm:text-base text-gray-600 mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %> 
          <i class="text-xs sm:text-sm text-gray-500">(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          <% if @minimum_password_length %>
            <br />
            <em class="text-xs sm:text-sm text-gray-600"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :current_password, class: "block text-sm sm:text-base text-gray-700 font-semibold mb-2" %> 
          <i class="text-xs sm:text-sm text-gray-500">(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-6">
          <%= f.submit "Update", class: "text-xs mt-3 w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6">
      <h3 class="text-lg sm:text-xl font-bold mb-4">Cancel my account</h3>
      <div class="mb-4">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full bg-red-500 hover:bg-red-700 text-white text-xs font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
      <%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-700 font-semibold" %>
    </div>
  </div>
</div>
